<div class="container">
	<h2>Edit Novel Details</h2>

	<%= form_for @novel do |f| %>

	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div class="form-group">
		<%= f.label :isbn %>
		<%= f.text_field :isbn %>
	</div>

	<div class="form-group">
		<%= f.label :format %>
		<%= f.text_field :format %>
	</div>

	<div class="form-group">
		<%= f.label :genre %>
		<%= f.select :genre_id, Genre.all.collect { |x| [x.name, x.id] }, {:include_blank => 'Select Genre' }, class:'form-control' %><br /> <br />
	</div>

	<div class="form-group">
		<%= f.label :publisher %>
		<%= f.select :publisher_id, Publisher.all.collect { |x| [x.name, x.id] }, {:include_blank => 'Select Publisher' }, class:'form-control' %><br /> <br />
	</div>

	<div class="form-group">
		<%= f.label :author %>
		<%= f.select :author_id, Author.all.collect { |x| [x.fname + ' ' + x.lname, x.id] }, {:include_blank => 'Select Author' }, class:'form-control' %><br /> <br />
	</div>

	<div class="form-group">
		<%= f.label :price %>
		<%= f.number_field :price %>
	</div>

	<div class="form-group">
		<%= f.label :pages %>
		<%= f.text_field :pages %>
	</div>

	<div class="form-group">
		<%= f.label :publication %>
		<%= f.date_field :publication %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<%= f.submit "Submit", class:'btn btn-primary' %>
	<%= link_to "Cancel", novels_path, class:'btn btn-default' %>
		
	<% end %>
</div>
