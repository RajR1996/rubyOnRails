<div class="container">
	<h2>Authors</h2>

	<table border="1" class="table">
		<tr>
			<th>Author Firstname</th>
			<th>Author Lastname</th>
			<th>Author Bio</th>
			<th>Author Page</th>
		</tr>
		<% @authors.each do |author| %>
		<tr>
			<td> <%= author.fname %> </td>
			<td> <%= author.lname %> </td>
			<td> <%= author.bio %> </td>
			<td> <%= link_to 'Author Page', author_path(author) %> </td>
		</tr>
		<% end %>
	</table>
</div>
